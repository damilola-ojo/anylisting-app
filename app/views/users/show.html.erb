<div class="row">
  <aside class="col-md-4">
    <section class="user_info mt-2">
      <%= render "save_form" if current_user %>
      <h1>
        <%= current_user.first_name  %>
        <%= current_user.email  %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if current_user.created_listings.any? %>
      <h3>
        Listings (<%= current_user.created_listings.count %>)
      </h3>
      <ol class="listings">
        <%= render @listings %>
      </ol>
    <% end %>
  </div>
</div>


