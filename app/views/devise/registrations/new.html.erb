<h2>Sign up</h2>

<%= simple_form_for(@user, url: registration_path(@user)) do |user_form| %>
  <%= form_error_notification(@user) %>

    <%= user_form.input :first_name,
                        input_html: { autofocus: true } %>
    <%= user_form.input :last_name %>
    <%= user_form.input :email %>
    <%= user_form.input :password %>
    <%= user_form.input :password_confirmation %>

    <%= user_form.submit "Sign Up", class: "btn btn-primary mt-3" %>
  <% end %>

<%= render "devise/shared/links" %>

