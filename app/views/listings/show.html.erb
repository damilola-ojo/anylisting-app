<div class="d-flex justify-content-between">
  <div class="mt-2">
    <%= link_to sanitize("&larr; Back to listings"), listings_path %>
  </div>
  <% if current_user %>
    <div class="mt-2">
      <%= render "save_form" %>
    </div>
  <% end %>
</div>

<div class="text-center mt-5">
  <h1><%= @listing.name %></h1>
  <b class="lead mt-3">Capacity: <%= @listing.capacity %>,<b>
  <b class="lead mt-3">Category: <%= @listing.category.name %>,<b>
  <b class="lead mt-3">Location: <%= @listing.location.name %><b> 
  <p class="lead mt-3">Description: <%= @listing.description %></p>
</div>

<% if current_user&.created_listings&.include?(@listing) %>
  <div class="text-center mt-2">
    <%= link_to "Edit", edit_listing_path(@listing) %><br>
    <%= button_to "Delete", @listing, method: :delete, class: "btn btn-primary" %>
  </div>
<% end %>

