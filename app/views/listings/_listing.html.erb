<ul class="list-group list-group-light">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
      <div class="ms-3">
        <p class="fw-bold mb-1"><%= listing.name %></p>
        <p class="text-muted mb-0"><%= listing.description %></p>
        <p class="mt-2"><small><em>
          Location: <%= listing.location.name %> | Category: <%= listing.category.name %> |Capacity: <%= listing.capacity %>
          </em></small></p>
      </div>
    </div>
    <%= link_to "View", listing, class: "btn btn-link btn-rounded btn-sm", role: "button" %>
  </li>
</ul>
